<%= content_tag :h1, @post.title %>
<%= content_tag :h1, @post.content %>
<ul>
  <% @post.categories.each do |cat| %>
    <%= content_tag :li, cat.name %>
  <% end %>
</ul>

<ul>
  <% @post.comments.each do |comment| %>
    <%= content_tag :li, comment.user.username + " says: " + comment.content %>
  <% end %>
</ul>

<ul>
  <% @post.users.uniq.each do |user| %>
    <%= content_tag :li, link_to(user.username, user) %>
  <% end %>
</ul>

<%= form_for @comment do |f| %>
  <%= f.text_field :content %>
  <%= f.collection_select :user_id, User.all, :id, :username %>
  <%= f.fields_for :user, @user do |user_fields| %>
    <%= user_fields.text_field :username %>
  <% end %>
  <%= f.hidden_field :post_id, value: @post.id %>
<%= f.submit %>
<% end %>